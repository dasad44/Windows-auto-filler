<Window x:Class="Auto_filler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_filler"
        mc:Ignorable="d"
        Title="Windows Auto Filler" Height="332.087" Width="803" Loaded="Window_Loaded" WindowStyle="None" AllowsTransparency="True">
    <StackPanel Height="352" VerticalAlignment="Top">
        <Grid Height="355">
            <TabControl TabStripPlacement="Left" BorderThickness="2" Background="#fcfcfd" SelectionChanged="TabControl_SelectionChanged" Margin="0,0,-0.333,0">
                <TabItem BorderBrush="Transparent" Width="150" Height="70" Header="Properties" Background="#2a2a29" Foreground="White" Margin="-4 -4 4 4">
                    <UniformGrid Columns="1" RenderTransformOrigin="0.5,0.5">
                        <Grid Height="13" Background="#cb1b42" Margin="0,0,0,44"/>
                        <Button x:Name="HideButton" Content="Hide" HorizontalAlignment="Left" Margin="17,0,0,0" VerticalAlignment="Top" Width="99" Height="34" Click="HideButton_Click" Grid.ColumnSpan="2" Grid.Column="2"/>
                        <Button x:Name="AutoTurnon" Content="Uruchamiaj przy&#xA;starcie systemu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124"  Height="35" Click="AutoTurnon_Click" Grid.ColumnSpan="2" Grid.Column="2"/>
                        <Button x:Name="TurningOff" Content="Wylącz uruchaminanie&#xA;przy starcie systemu" VerticalAlignment="Center" Width="161" Height="37" Click="TurningOff_Click" Grid.ColumnSpan="2" Grid.Column="2"/>
                        <Button x:Name="ValueSaver" Content="Zapisz" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="ValueSaver_Click" Grid.Column="2"/>
                        <TextBox x:Name="ValueHolder" HorizontalAlignment="Left" Height="48"  TextWrapping="Wrap" VerticalAlignment="Top" Width="129" TextChanged="ValueHolder_TextChanged"/>
                    </UniformGrid>
                </TabItem>

                <TabItem BorderBrush="Transparent" Width="150" Height="70" Header="Save Screenshot" Background="#2a2a29" Foreground="White" Margin="-4 -7 4 7">
                    <UniformGrid Columns="1">
                        <Grid Background="#cb1b42" Width="631" Margin="0,0,0,55"/>
                        <DockPanel RenderTransformOrigin="0.509,-0.093" Margin="0,-68,0,91">
                            <CheckBox x:Name="ScreenshotCheck" Content="ScreenShot ON" Height="18" VerticalAlignment="Top" Checked="ScreenshotCheck_Checked" Unchecked="ScreenshotCheck_Unchecked" Margin="0,45,0,-17"/>
                        </DockPanel>
                        <DockPanel Margin="0,-68,0,0" Height="39" VerticalAlignment="Top" RenderTransformOrigin="0.496,1">
                            <Button x:Name="SaverDirectoryButton" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="SaverDirectoryButton_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
                            <TextBox x:Name="SaverDirectory" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="C:\" VerticalAlignment="Top" Width="222"  Grid.ColumnSpan="3" Grid.Column="1"/>
                            <Button x:Name="ListRefresh" Content="Odśwież"  VerticalAlignment="Top" Width="75"  Click="ListRefresh_Click" Grid.ColumnSpan="4" Grid.Column="1" RenderTransformOrigin="0.947,0.364"/>
                            <Button x:Name="CancelDeleteList" Content="Button"  VerticalAlignment="Top" Width="75" Click="CancelDeleteList_Click" Grid.ColumnSpan="5" Grid.Column="1" RenderTransformOrigin="1.467,0.409"/>
                        </DockPanel>
                        <DockPanel Margin="10,-72,0,0" Height="34" VerticalAlignment="Top">
                            <Button x:Name="AllScreenList" Content="All" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"  Click="AllScreenList_Click"/>
                            <Button x:Name="ImportantScreenList" Content="Important" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"  Click="ImportantScreenList_Click"/>
                            <Button x:Name="TempScreenList" Content="Temp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="TempScreenList_Click"/>
                        </DockPanel>
                        <DockPanel Margin="0,-116,0,0" Height="173" VerticalAlignment="Top" RenderTransformOrigin="0.496,1">
                            <ListBox x:Name="SaverListView"
                                ItemsSource="{Binding Items}"
                                HorizontalAlignment="Right"
                                SelectionMode="Multiple" Width="628" Height="174" VerticalAlignment="Bottom">
                                <ListBox.Resources>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="OverridesDefaultStyle" Value="true" />
                                        <Setter Property="SnapsToDevicePixels" Value="true" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <CheckBox Margin="5,2"
                                          IsChecked="{Binding IsSelected,RelativeSource={RelativeSource TemplatedParent}}">
                                                        <ContentPresenter />
                                                    </CheckBox>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.Resources>
                            </ListBox>
                        </DockPanel>

                    </UniformGrid>
                </TabItem>

                <TabItem BorderBrush="Transparent" Width="150" Height="70" Header="Multi Clipboard" Background="#2a2a29" Foreground="White" Margin="-4 -11 4 11">
                    <UniformGrid Columns="1">
                        <Grid Height="13" Background="#cb1b42" Margin="0,0,0,333"/>
                    </UniformGrid>

                </TabItem>
                <TabItem BorderBrush="Transparent" Width="150" Height="70" Header="Snipping Tool" Background="#2a2a29" Foreground="White" Margin="-4 -15 4 15">
                    <UniformGrid Columns="1">
                        <Grid Height="13" Background="#cb1b42" Margin="0,0,0,334"/>
                    </UniformGrid>

                </TabItem>
                <TabItem BorderBrush="Transparent" Width="150" Height="70" Header="PageHotKey" Foreground="White" Background="#2a2a29" Margin="-4 -19 4 19">
                    <UniformGrid Columns="1">
                        <Grid Height="13" Background="#cb1b42" Margin="0,0,0,333"/>
                    </UniformGrid>
                </TabItem>
            </TabControl>
        </Grid>

    </StackPanel>
</Window>