<Window x:Class="Auto_filler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_filler"
        mc:Ignorable="d"
        Title="Windows Auto Filler" Height="450" Width="800" Loaded="Window_Loaded" MouseMove="Window_MouseMove">
    <Grid>
        <Button x:Name="HideButton" Content="Hide" HorizontalAlignment="Left" Margin="328,337,0,0" VerticalAlignment="Top" Width="99" Height="34" Click="HideButton_Click"/>
        <CheckBox x:Name="ScreenshotCheck" Content="Screenshot" HorizontalAlignment="Left" VerticalAlignment="Top" Width="132" Margin="30,70,0,0" Height="40" Unchecked="ScreenshotCheck_Unchecked" Checked="ScreenshotCheck_Checked"/>
        <TextBox x:Name="ValueHolder" HorizontalAlignment="Left" Height="48" Margin="53,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" TextChanged="ValueHolder_TextChanged"/>
        <Button x:Name="ValueSaver" Content="Zapisz" HorizontalAlignment="Left" Margin="207,279,0,0" VerticalAlignment="Top" Width="75" Click="ValueSaver_Click"/>
        <Button Content="Uruchamiaj przy&#xD;&#xA;starcie systemu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="127" Margin="555,162,0,0" Height="36" Click="Button_Click"/>
        <Button x:Name="SaverDirectoryButton" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="190,70,0,0" Click="SaverDirectoryButton_Click" Visibility="Hidden"/>
        <TextBox x:Name="SaverDirectory" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="C:\" VerticalAlignment="Top" Width="222" Margin="190,118,0,0" Visibility="Hidden"/>
    </Grid>
</Window>