<Window x:Class="Auto_filler.SnippingToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_filler"
        mc:Ignorable="d"
        Title="SnippingToolWindow" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" MouseLeftButtonUp="Window_MouseLeftButtonUp" MouseMove="Window_MouseMove" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="wholescreenimage" Stretch="UniformToFill"/>
        </Grid.Background>
        <Rectangle x:Name="MarkingSquare" HorizontalAlignment="Left" VerticalAlignment="Top" Fill="#FFF4F4F5" Height="0" Stroke="Black" Width="0" Opacity="0.5"/>

    </Grid>
    
</Window>
    
