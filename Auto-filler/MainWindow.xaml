<Window x:Class="Auto_filler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_filler"
        mc:Ignorable="d"
        Title="Windows Auto Filler" Height="435.326" Width="800" Loaded="Window_Loaded" MouseMove="Window_MouseMove">
    <StackPanel>
        <Grid Height="50" Background="DarkRed">
            <TextBlock TextAlignment="Center" FontFamily="Retro" FontSize="30"></TextBlock>
        </Grid>
        <Grid Height="355">
            <TabControl TabStripPlacement="Left" BorderThickness="2" Background="#fcfcfd">
                <TabItem Width="150" Height="70" Header="Properties">
                    <UniformGrid Columns="1" RenderTransformOrigin="0.5,0.5">
                        <Button x:Name="HideButton" Content="Hide" HorizontalAlignment="Left" Margin="17,0,0,0" VerticalAlignment="Top" Width="99" Height="34" Click="HideButton_Click" Grid.ColumnSpan="2" Grid.Column="2"/>
                        <Button x:Name="AutoTurnon" Content="Uruchamiaj przy&#xD;&#xA;starcie systemu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124"  Height="35" Click="AutoTurnon_Click" Grid.ColumnSpan="2" Grid.Column="2"/>
                        <Button x:Name="TurningOff" Content="Wylącz uruchaminanie&#xD;&#xA;przy starcie systemu" VerticalAlignment="Center" Width="161" Height="37" Click="TurningOff_Click" Grid.ColumnSpan="2" Grid.Column="2"/>
                        <Button x:Name="ValueSaver" Content="Zapisz" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="ValueSaver_Click" Grid.Column="2"/>
                        <TextBox x:Name="ValueHolder" HorizontalAlignment="Left" Height="48"  TextWrapping="Wrap" VerticalAlignment="Top" Width="129" TextChanged="ValueHolder_TextChanged"/>
                    </UniformGrid>
                </TabItem>

                <TabItem Width="150" Height="70" Header="Save Screenshot">
                    <UniformGrid Columns="1">
                        <DockPanel>
                            <Button x:Name="SaverDirectoryButton" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="SaverDirectoryButton_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
                            <TextBox x:Name="SaverDirectory" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="C:\" VerticalAlignment="Top" Width="222"  Grid.ColumnSpan="3" Grid.Column="1"/>
                        </DockPanel>
                    </UniformGrid>
                </TabItem>

                <TabItem Width="150" Height="70" Header="Multi Clipboard">
                    <UniformGrid Columns="1">

                    </UniformGrid>

                </TabItem>
                <TabItem Width="150" Height="70" Header="Snipping Tool">
                    <UniformGrid Columns="1">

                    </UniformGrid>

                </TabItem>
            </TabControl>
        </Grid>

    </StackPanel>
</Window>